{
  "name": "config-poc",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --config config/webpack/webpack.dev.js",
    "build": "webpack --config config/webpack/webpack.prod.js",
    "changelog": "standard-changelog -i CHANGELOG.md",
    "postbuild": "bundlesize",
    "lint": "run-p lint:*",
    "lint:js": "eslint src/**/*.{js,jsx}",
    "lint:css": "stylelint src/**/*.{css,scss}",
    "fix": "run-p fix:*",
    "fix:js": "eslint --fix src/**/*.{js,jsx}",
    "fix:css": "stylelint --fix src/**/*.{css,scss}",
    "commit": "git cz"
  },
  "description": "Frontend project configuration, workflow and code quality utils.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isidrok/config-poc.git"
  },
  "keywords": [
    "webpack",
    "eslint",
    "stylelint",
    "front",
    "npm"
  ],
  "author": "Isidro Torregrosa Torralba",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/isidrok/config-poc/issues"
  },
  "homepage": "https://github.com/isidrok/config-poc#readme",
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-loadable": "^5.4.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "autoprefixer": "^8.5.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "bundlesize": "^0.17.0",
    "clean-webpack-plugin": "^0.1.19",
    "commitizen": "^2.10.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^5.0.1",
    "dotenv-webpack": "^1.5.5",
    "eslint": "^4.19.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.7.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.8",
    "image-webpack-loader": "^4.2.0",
    "interpolate-html-plugin": "^3.0.0",
    "lint-staged": "^7.1.1",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "postcss-flexbugs-fixes": "^3.3.1",
    "postcss-loader": "^2.1.5",
    "sass-loader": "^7.0.1",
    "standard-changelog": "^1.0.19",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^3.1.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "svg-url-loader": "^2.3.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.8.3",
    "webpack-bundle-analyzer": "^2.12.0",
    "webpack-cli": "^2.1.3",
    "webpack-dashboard": "^1.1.1",
    "webpack-dev-server": "^3.1.4",
    "webpack-manifest-plugin": "^2.0.2",
    "webpack-merge": "^4.1.2"
  },
  "bundlesize": [
    {
      "path": "./dist/static/js/*.js"
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
